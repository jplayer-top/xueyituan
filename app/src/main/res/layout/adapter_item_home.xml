<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_40dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivIsVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:src="@drawable/huiyuan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvGoodsName"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:text="￥0.01"
            android:textColor="@color/money_color"
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvLocalGoodsPrice"
            app:layout_constraintEnd_toStartOf="@+id/tvLocalGoodsPrice"
            app:layout_constraintTop_toTopOf="@+id/tvLocalGoodsPrice"/>

        <TextView
            android:id="@+id/tvLocalGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:text="100元"
            android:textColor="@color/color999"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_106dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"

            android:text="学艺团官方课程"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvGoodsPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:text="试课即送精美礼品一份"
            android:textColor="@color/money_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvGoodsPrice"
            app:layout_constraintStart_toEndOf="@+id/tvGoodsPrice"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:background="#d7d7d7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvGoodsName"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>