<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/dimen_15dp"
    android:paddingStart="@dimen/dimen_15dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clSharePic"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivShareSrc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@color/color999"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/share_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivShareSrc"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardQcode"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53">

            <ImageView
                android:id="@+id/ivQCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fef1e1"
                android:padding="@dimen/dimen_2dp"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvTTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="扫描二维码下载学艺团APP"
            android:textColor="@color/colorBlackGold"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardQcode"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="我是董先生 我已在学艺团"
            android:textColor="@color/colorBlackGold"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTTip"/>


        <LinearLayout
            android:id="@+id/llTip0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tvName">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="领取"
                android:textColor="@color/colorBlackGold"
                android:textSize="@dimen/dimen_20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text=" 200元奖学金"
                android:textColor="#298686"
                android:textSize="@dimen/dimen_20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:text="扫码下载学艺团APP"
            android:textColor="@color/color666"
            android:textSize="@dimen/dimen_13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTip0"/>

        <TextView
            android:id="@+id/tvTip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:text="即可学习海量免费课程"
            android:textColor="@color/color666"
            android:textSize="@dimen/dimen_13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTip2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTip3">

            <TextView
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/shape_5_theme"
                android:text="学"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTip4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学艺团"
                    android:textColor="@color/colorBlackGold"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Art Group"
                    android:textColor="@color/colorBlackGold"
                    android:textSize="@dimen/dimen_7sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>
