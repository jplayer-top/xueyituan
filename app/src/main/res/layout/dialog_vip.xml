<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivFree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tankuang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btnToVip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_35dp"
        android:layout_marginStart="@dimen/dimen_25dp"
        android:background="@drawable/vip_anniu"
        android:paddingBottom="@dimen/dimen_5dp"
        android:text="进入会员中心"
        android:textColor="#78482F"
        app:layout_constraintBottom_toBottomOf="@+id/ivFree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:src="@drawable/guanbi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFree"/>
</android.support.constraint.ConstraintLayout>