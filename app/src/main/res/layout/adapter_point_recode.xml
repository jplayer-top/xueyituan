<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivThumbImg"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:src="@drawable/point_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvPointTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/ivThumbImg"
        app:layout_constraintTop_toTopOf="@+id/ivThumbImg"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:text="2018-09-04 17:01:09"
        android:textColor="@color/color999"
        android:textSize="@dimen/dimen_10sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivThumbImg"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:drawableStart="@drawable/redpack"
        android:text="1.00"
        android:textColor="@color/money_color"
        app:layout_constraintBottom_toBottomOf="@+id/ivThumbImg"
        app:layout_constraintStart_toEndOf="@+id/ivThumbImg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@drawable/shape_divider"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>