<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/statusBarMe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/ivToolRightLeft"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:padding="@dimen/dimen_3dp"
                    android:src="@drawable/icon_set"/>

                <ImageView
                    android:id="@+id/ivToolRight"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:padding="@dimen/dimen_3dp"
                    android:src="@drawable/message"
                    android:tint="@color/color999"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="true"
        app:srlEnablePureScrollMode="true"
        app:srlPrimaryColor="@color/white">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <top.jplayer.baseprolibrary.widgets.polygon.PolygonImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:poly_border="true"
                    app:poly_border_color="@color/grey"
                    app:poly_border_width="@dimen/dimen_1dp"
                    app:poly_vertices="0"/>


                <LinearLayout
                    android:id="@+id/llShowMsgUser"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
                    app:layout_constraintStart_toEndOf="@+id/ivAvatar"
                    app:layout_constraintTop_toTopOf="@+id/ivAvatar">

                    <TextView
                        android:id="@+id/tvNick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_3dp"
                        android:text="会员名称：学艺团"/>

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员红包：000"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivIsVip"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:src="@drawable/select_vip"
                    app:layout_constraintStart_toEndOf="@+id/llShowMsgUser"
                    app:layout_constraintTop_toTopOf="@+id/llShowMsgUser"/>

                <TextView
                    android:id="@+id/tvToLogin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="点击登录"
                    android:textSize="@dimen/dimen_16sp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivAvatar"
                    app:layout_constraintTop_toTopOf="@+id/ivAvatar"/>

                <LinearLayout
                    android:id="@+id/llCollection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toStartOf="@+id/llIssue"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivAvatar">

                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:src="@drawable/me_collection"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llIssue"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toStartOf="@+id/llLook"
                    app:layout_constraintStart_toEndOf="@+id/llCollection"
                    app:layout_constraintTop_toBottomOf="@+id/ivAvatar">

                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:src="@drawable/me_issue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/llIssue"
                    app:layout_constraintTop_toBottomOf="@+id/ivAvatar">

                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:src="@drawable/me_look"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="足迹"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="@+id/llCollection"
                    app:layout_constraintStart_toStartOf="@+id/llCollection"
                    app:layout_constraintTop_toBottomOf="@+id/llCollection">

                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:src="@drawable/me_work"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合作"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="@+id/llIssue"
                    app:layout_constraintStart_toStartOf="@+id/llIssue"
                    app:layout_constraintTop_toBottomOf="@+id/llIssue">

                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:src="@drawable/me_shop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家端"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="@+id/llLook"
                    app:layout_constraintStart_toStartOf="@+id/llLook"
                    app:layout_constraintTop_toBottomOf="@+id/llLook">

                    <ImageView
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:src="@drawable/me_chat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/llOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:gravity="center_vertical"
                    android:text="课程订单"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/llWork"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_15dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llOrder"/>

                <TextView
                    android:id="@+id/llRecommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:text="为你推荐"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView"/>

                <ImageView
                    android:id="@+id/ivRecommend01"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    app:layout_constraintEnd_toStartOf="@+id/ivRecommend02"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llRecommend"/>

                <ImageView
                    android:id="@+id/ivRecommend02"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginEnd="@dimen/dimen_15dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivRecommend01"
                    app:layout_constraintTop_toBottomOf="@+id/llRecommend"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
